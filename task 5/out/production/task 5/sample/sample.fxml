<?import javafx.scene.text.Font?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
   <children>
      <AnchorPane prefHeight="497.0" prefWidth="750.0" style="-fx-border-color: #0066ff; -fx-border-width: 5px;">
         <children>
            <Label alignment="TOP_CENTER" layoutX="45.0" layoutY="56.0" prefHeight="58.0" prefWidth="659.0" text="Welcome to COVID-19 Vaccination Centre !">
               <font>
                  <Font name="System Bold" size="30.0" />
               </font>
            </Label>
            <Button fx:id="btnAddDetails" layoutX="253.0" layoutY="185.0" mnemonicParsing="false" onAction="#AddData" prefHeight="43.0" prefWidth="243.0" style="-fx-background-radius: 15px; -fx-background-color: #0066ff;" text="Add Patient Details" textFill="WHITE">
               <font>
                  <Font size="19.0" />
               </font></Button>
            <Button fx:id="btnQuit" layoutX="253.0" layoutY="292.0" mnemonicParsing="false" onAction="#quit" prefHeight="43.0" prefWidth="243.0" style="-fx-background-color: #0066ff; -fx-background-radius: 15px;" text="Quit" textFill="WHITE">
               <font>
                  <Font size="19.0" />
               </font></Button>
            <Label alignment="CENTER" layoutX="182.0" layoutY="249.0" prefHeight="26.0" prefWidth="386.0" text="---------------------- or ----------------------">
               <font>
                  <Font size="17.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
   </children>
</GridPane>
